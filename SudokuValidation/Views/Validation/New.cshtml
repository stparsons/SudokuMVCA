@model SudokuValidation.Models.ViewModels.NewPuzzleFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Puzzle</h2>

@using ( Html.BeginForm( "Validate", "Validation" ) )
{
    <div class="form-group">
        @Html.LabelFor(n => n.PuzzleData)
        @Html.TextAreaFor( n => n.PuzzleData, new { @class = "form-control" } )
    </div>
    <button type="submit" class="btn btn-primary">Save</button>

}


