@model SudokuValidation.Models.SudokuGrid
@{
    ViewBag.Title = "Index";
}

<div class="container">

    <h1>Sudoku Validation</h1>
    <h2>Input Numbers</h2>
    <input id="inNumbers" type="text">
    <h2>Validation Grid</h2>
    @{ 
        var rowIndex = 0;
        var colIndex = 0;
    }
    <table id="grid">
        @foreach ( var row in Model.Grid )
        {
            colIndex = 0;
            if ( Model.ValidatorGrid.IsRowValid(rowIndex))
            {
                <tr>
                    @foreach ( var col in row )
                    {
                        if(Model.ValidatorGrid.IsColumnValid(colIndex))
                        {   
                        <td>
                            <input id="cell-@Model.IndexIterator" type="text" value="@col" disabled />
                        </td>
                        }
                        else
                        {
                            <td>
                                <input id="cell-@Model.IndexIterator" type="text" value="@col" style="background-color: indianred" disabled />
                            </td>
                        }
                        Model.IndexIterator++;
                        colIndex++;
                    }
                </tr>
            }
            else
            {
                <tr>
                    @foreach ( var col in row )
                    {
                        if ( Model.ValidatorGrid.IsColumnValid( colIndex ) )
                        {
                            <td>
                                <input id="cell-@Model.IndexIterator" type="text" value="@col" style="background-color: indianred" disabled/>
                            </td>
                        }
                        else
                        {
                            <td>
                                <input id="cell-@Model.IndexIterator" type="text" value="@col" style="background-color: indianred" disabled />
                            </td>
                        }
                        Model.IndexIterator++;
                        colIndex++;
                    }
                </tr>
            }
            rowIndex++;
        }
    </table>

</div>


